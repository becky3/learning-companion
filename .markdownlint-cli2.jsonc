{
  // プロジェクト固有のルール設定
  "config": {
    // 行長制限: 日本語ドキュメントは1文字で表示幅が大きいため200に緩和
    // コードブロック・テーブルは除外
    "MD013": {
      "line_length": 200,
      "code_blocks": false,
      "tables": false
    },
    // 見出しの重複: 無効化
    // 仕様書間で「概要」「背景」等の同一見出しは許容
    // エージェント定義内で同一セクション名（出力例テンプレートなど）が複数回登場する
    "MD024": false,
    // テーブルスタイル: コンパクトスタイルがプロジェクト全体で統一されているため無効化
    "MD060": false,
    // 最初の行が見出しでなくてもOK（frontmatter対応）
    // エージェント・スキル定義ファイルはYAML frontmatterから始まる
    "MD041": false,
    // コードブロックの言語指定: 一部の汎用的なコードブロックでは言語指定不要
    // プロジェクト全体での一括適用は厳しいため無効化
    "MD040": false,
    // 強調記号を見出し代わりに使用: 一部の仕様書で使用されているため無効化
    "MD036": false
  },
  // 対象ファイル
  "globs": [
    "docs/**/*.md",
    "*.md",
    ".claude/**/*.md"
  ]
}
